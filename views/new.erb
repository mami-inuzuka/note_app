  <form action="/create" method="post">
    <div class="form__wrap">
      <label for="title">タイトル</label>
      <div class="form__title">
        <input id="title" type="text" name="title" placeholder="タイトルを入力">
      </div>

      <label for="content">内容</label>
      <div class="form__content">
        <textarea id="content" rows="10" cols="60" name="content" placeholder="メモの内容をここに記入してください"></textarea>
      </div>
    </div>
    <div class="button__wrap">
      <div class="button__blue button__submit">
        <input type="submit" value="登録する">
      </div>
    </div>
  </form>

