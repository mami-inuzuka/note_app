require 'sinatra'
require 'sinatra/reloader'
require 'csv'
require 'securerandom'

get '/' do
  @data_list = CSV.read("data.csv", headers: true)
  erb :index
end

get '/new' do
  erb :new
end

post '/create' do
  id = SecureRandom.uuid
  CSV.open('data.csv','a') do |c|
    c << [id,params[:title],params[:content]]
  end
  redirect to('/')
end

get '/show/:id' do
  csv_table = CSV.table("data.csv", headers: true).by_row
  @data = csv_table.find {|row|
    row[:id] == params[:id]
  }
  erb :show
end

get '/delete/:id' do
  csv_table = CSV.table("data.csv", headers: true).by_row
  csv_table.delete_if do |row|
    row[:id] == params[:id]
  end

  CSV.open("data.csv", "w", headers: true) do |c|
    c << ["id","title","content"]
    csv_table.each { |row| c.puts row }
  end
  redirect to('/')
  erb :delete
end

